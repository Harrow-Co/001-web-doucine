{
  "kind": "collectionType",
  "collectionName": "contact_messages",
  "info": {
    "singularName": "contact-message",
    "pluralName": "contact-messages",
    "displayName": "Messages de contact",
    "description": "Messages re√ßus depuis le formulaire de contact du site"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "minLength": 2
    },
    "email": {
      "type": "email",
      "required": true
    },
    "subject": {
      "type": "string",
      "required": true
    },
    "message": {
      "type": "text",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "nouveau",
        "lu",
        "en_cours",
        "traite"
      ],
      "default": "nouveau"
    },
    "notes": {
      "type": "text"
    },
    "date": {
      "type": "datetime",
      "required": true,
      "default": "now"
    }
  }
} 